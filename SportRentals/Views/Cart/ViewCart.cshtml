@model IEnumerable<SportRentals.ViewModels.CartViewModel>

@{
    ViewBag.Title = "ViewCart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h2>Your shoping cart</h2>


<table class="table">
    <tr>
        <th></th>
    </tr>
 @foreach (var item in Model)
{
        <tr>
            <div>
                
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.ProductID)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => item.ProductID)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Product)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => item.Product)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Price)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => item.Price)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Quantity)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => item.Quantity)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.SubTotal)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => item.SubTotal)
                    </dd>

                </dl>
            </div>

            
        </tr>
 }
    
       
 @Html.ActionLink("Checkout", "ProcessOrder", "Cart", new { @class = "btn btn-default" } )
   

</table>
