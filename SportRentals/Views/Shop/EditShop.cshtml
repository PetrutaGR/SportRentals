@using System.Collections
@using SportRentals.Models
@model SportRentals.ViewModels.ShopEditViewModel

@{
    ViewBag.Title = "EditShop";
    Layout = "~/Views/Shared/_Layout.cshtml";
    //Layout = "~/Views/Shared/_assemblylayout.cshtml";
}

<h2>Edit shop details</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="flex-container">
        <div>
            <h4>Information</h4>
            <hr/>
            @Html.ValidationSummary(true, "", new {@class = "text-danger"})

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span>
                        @Html.LabelFor(model => model.Shop.ShopId, htmlAttributes: new {@class = "input-group-text"})
                    </span>
                </div>
                @Html.ValidationMessageFor(model => model.Shop.ShopId, "", new {@class = "text-danger"})
                @Html.EditorFor(model => model.Shop.ShopId, new {htmlAttributes = new {@class = "form-control", @readonly = true}})
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span>
                        @Html.LabelFor(model => model.Shop.Name, htmlAttributes: new {@class = "input-group-text"})
                    </span>
                </div>
                @Html.ValidationMessageFor(model => model.Shop.Name, "", new {@class = "text-danger"})
                @Html.EditorFor(model => model.Shop.Name, new {htmlAttributes = new {@class = "form-control"}})
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span>
                        @Html.LabelFor(model => model.Shop.Phone, htmlAttributes: new {@class = "input-group-text"})
                    </span>
                </div>
                @Html.ValidationMessageFor(model => model.Shop.Phone, "", new {@class = "text-danger"})
                @Html.EditorFor(model => model.Shop.Phone, new {htmlAttributes = new {@class = "form-control"}})
            </div>


            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span>
                        @Html.LabelFor(model => model.Shop.Email, htmlAttributes: new {@class = "input-group-text"})
                    </span>
                </div>
                @Html.ValidationMessageFor(model => model.Shop.Email, "", new {@class = "text-danger"})
                @Html.EditorFor(model => model.Shop.Email, new {htmlAttributes = new {@class = "form-control"}})
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    @Html.LabelFor(model => model.Shop.CategoryID, htmlAttributes: new {@class = "input-group-text"})
                </div>
                @Html.DropDownListFor(model => model.Shop.CategoryID, ViewData["CategoryList"] as IEnumerable<SelectListItem>, new {@class = "custom-select"})

            </div>
        </div>
        <div>
            <h4>Address</h4>
            <hr />
            @Html.HiddenFor(model => model.Address.AddressID)
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span>
                        @Html.LabelFor(model => model.Address.StreetNumber, htmlAttributes: new { @class = "input-group-text" })
                    </span>
                </div>
                @Html.ValidationMessageFor(model => model.Address.StreetNumber, "", new { @class = "text-danger" })
                @Html.EditorFor(model => model.Address.StreetNumber, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span>
                        @Html.LabelFor(model => model.Address.Street, htmlAttributes: new { @class = "input-group-text" })
                    </span>
                </div>
                @Html.ValidationMessageFor(model => model.Address.Street, "", new { @class = "text-danger" })
                @Html.EditorFor(model => model.Address.Street, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span>
                        @Html.LabelFor(model => model.Address.PostCode, htmlAttributes: new { @class = "input-group-text" })
                    </span>
                </div>
                @Html.ValidationMessageFor(model => model.Address.PostCode, "", new { @class = "text-danger" })
                @Html.EditorFor(model => model.Address.PostCode, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span>
                        @Html.LabelFor(model => model.Address.City, htmlAttributes: new { @class = "input-group-text" })
                    </span>
                </div>
                @Html.ValidationMessageFor(model => model.Address.City, "", new { @class = "text-danger" })
                @Html.EditorFor(model => model.Address.City, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span>
                        @Html.LabelFor(model => model.Address.County, htmlAttributes: new { @class = "input-group-text" })
                    </span>
                </div>
                @Html.ValidationMessageFor(model => model.Address.County, "", new { @class = "text-danger" })
                @Html.EditorFor(model => model.Address.County, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span>
                        @Html.LabelFor(model => model.Address.Country, htmlAttributes: new { @class = "input-group-text" })
                    </span>
                </div>
                @Html.ValidationMessageFor(model => model.Address.Country, "", new { @class = "text-danger" })
                @Html.EditorFor(model => model.Address.Country, new { htmlAttributes = new { @class = "form-control" } })
            </div>

        </div>
        <div>
            <h4>Payment Methods</h4>
            <hr/>
            @for (var i = 0; i < Model.PaymentMethods.Count(); i++)
            {
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            <span>
                                @Html.CheckBoxFor(model => model.PaymentMethods[i].Selected, htmlAttributes: new {@class = "primary"})
                            </span>
                        </div>

                    </div>
                    @Html.HiddenFor(model => model.PaymentMethods[i].PaymentMethod.PaymentMethodID)
                    @Html.EditorFor(model => model.PaymentMethods[i].PaymentMethod.Name, new {htmlAttributes = new {@class = "form-control", @readonly = true}})

                </div>
            }
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-9">
            <input type="submit" value="Save" class="btn btn-default"/>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
